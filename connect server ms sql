<?php
// phpinfo();

$serverName = 'xx';
$databaseName= 'x';
$usernName = 'x';
$password = 'x';

//connection option


$connectionOption = array(
    "Database" => $databaseName,
    'Uid' =>$usernName,
    'PWD' =>$password,
    'MultipleActiveResultSets'=>true,
    'CharacterSet'=> 'UTF-8',
    'TrustServerCertificate' =>true

);

// estiblish connection
$conn = sqlsrv_connect($serverName,$connectionOption);


if($conn == false){
    echo 'fail';
}
else{
    echo "good";
}

?>
